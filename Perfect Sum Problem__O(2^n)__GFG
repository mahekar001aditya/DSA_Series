                                 /  \
                                /    \

Level 1 (15)
                         ""                 "15"
                        /  \               /    \
                       /    \             /      \

Level 2 (20)
                  ""       "20"      "15"       "15,20"
                 /  \      /  \      /  \       /     \
                /    \    /    \    /    \     /       \

Level 3 (10)
             ""    "10"  "20"  "20,10" "15"  "15,10" "15,20" "15,20,10"
             |      |     |       |     |      |       |        |
            {}     {10}  {20}   {20,10} {15}  {15,10} {15,20}  {15,20,10}
                                               ✔️ 
  
