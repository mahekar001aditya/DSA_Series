
int findRepeating(int arr[], int n){

    int slow = arr[0], fast = arr[0];		                                  // initialize tortoise & hare

    do{
        slow = arr[slow];			                                             // move 1 step
        fast = arr[arr[fast]];		                                         // move 2 steps
    } while(slow != fast);			                                          // detect cycle (meeting point)

    slow = arr[0];				                                                // reset slow to start

    while(slow != fast){
        slow = arr[slow];			                                           // move 1 step
        fast = arr[fast];		                                           	// move 1 step
    }

    return slow;				                                              // repeating element
}


//////////////////////////////////////////////////////////////////////////

ðŸ”¹ Phase 1 (Detect Meeting) => 
                                i) Fast will enter the cycle first(or at same time)
                                ii) In every iteration, distance increases by one

ðŸ”¹ Phase 2 (Find Start)


------------------------------------------------
arr[] = [1,3,2,4,6,5,7,3]

slow = 1, fast = 1 

ðŸ”¹ Phase 1 (Detect Meeting)
    slow = 1, fast = 1
    slow = 3, fast = 4
    slow = 4, fast = 7
    slow = 6, fast = 4
    slow = 7, fast = 7

ðŸ”¹ Phase 2 (Find Start)
    slow = 1, fast = 7
    slow = 3, fast = 3

---------------------------------------

