
void LRotateOne(int arr[], int n){
    int temp = arr[0];        // store first element

    for(int i=1;i<n;i++){
        arr[i-1] = arr[i];   // shift elements one step left
    }

    arr[n-1] = temp;         // put first element at the end
}


