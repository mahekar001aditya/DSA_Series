class Solution {

                                                                      // Recursive function to count subsets of first 'n' elements of nums[] 
                                                                      // whose sum equals 'target'
    int countSubset(int nums[], int n, int target) {

                                                                                      // Base case:
                                                                                      // If no elements left (n == 0)
                                                                                      // Return 1 if target == 0 (empty subset sums to 0), else 0
        if(n == 0){
            return (target == 0) ? 1 : 0;
        }

                                                                                // Recursive case:
                                                                                // 1. Exclude current element (nums[n-1]) → target stays same
                                                                                // 2. Include current element → subtract nums[n-1] from target
        return countSubset(nums, n-1, target) + 
               countSubset(nums, n-1, target - nums[n-1]);
    }

                                                                                  // Function to count subsets of the full array nums[] whose sum equals 'target'
    public int perfectSum(int[] nums, int target) {
            int n = nums.length;                                                 // Number of elements in array
        return countSubset(nums, n, target);                                     // Start recursion with all elements
    }
}




//////////////////////////////////////////////////////////////////////////////

                    
