class Solution {
    public String countAndSay(int n) {
        if (n == 1)
            return "1";

        String num = "1";

        for (int j = 2; j <= n; j++) {

            int count = 1;
            String res = "";
            
            char cur = num.charAt(0);

            for (int i = 1; i < num.length(); i++) {
                if (cur == num.charAt(i))
                    count++;
                else {
                    res += Integer.toString(count) + cur;
                    cur = num.charAt(i);
                    count = 1;
                }
            }
            res += Integer.toString(count) + cur;
            num = res;
        }
        return num;
    }
}
