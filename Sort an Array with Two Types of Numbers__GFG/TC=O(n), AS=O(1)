

void segregatePosNeg(int arr[], int n){
    
    int i = -1, j = n;                      // two pointers (left & right)

    while(true){
        
        do{
            i++;                            // move forward until positive found
        } while(arr[i] < 0);

        do{
            j--;                            // move backward until negative found
        } while(arr[j] >= 0);

        if(i >= j){ return; }               // stop when pointers cross

        swap(arr, i, j);                    // swap misplaced elements
    }
}


