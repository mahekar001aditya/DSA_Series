class Solution {
    static ArrayList<Integer> subarraySum(int[] arr, int target) {
        ArrayList<Integer> list = new ArrayList<>();   // result list
        int s = 0, curr = 0, n = arr.length;           // s=start pointer, curr=current sum

        for(int e = 0; e < n; e++){                    // e=end pointer
            curr += arr[e];                             // add arr[e] to current sum

            while(curr > target && e <= n){            // shrink window from start while sum > target
                curr -= arr[s];                         // remove arr[s] from sum
                s++;                                    // move start forward
            }

            if(curr == target){                         // sum matches target
                list.add(s + 1);                        // 1-based start index
                list.add(e + 1);                        // 1-based end index
                return list;                             // return first matching subarray
            }
        }

        list.add(-1);                                     // no subarray found
        return list;
    }
}


