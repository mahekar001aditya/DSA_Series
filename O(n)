
void segregatePosNeg(int arr[], int n){
    
    int temp[] = new int[n];        // temp array
    int j = 0;                     // temp index

    for(int i = 0; i < n; i++){    // negatives first
        if(arr[i] < 0){
            temp[j++] = arr[i];
        }
    }

    for(int i = 0; i < n; i++){    // positives next
        if(arr[i] >= 0){
            temp[j++] = arr[i];
        }
    }

    for(int i = 0; i < n; i++){    // copy back
        arr[i] = temp[i];
    }
}

