
/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode() {}
 *     ListNode(int val) { this.val = val; }
 *     ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
class Solution {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
        ListNode t1 = l1;                                  // pointer for first list
        ListNode t2 = l2;                                  // pointer for second list
        ListNode dummy = new ListNode(-1), curr = dummy;   // dummy node to build result list
        int carry = 0;                                     // carry from addition

        while(t1 != null || t2 != null){                   // run until both lists are finished
            int sum = carry;                               // start with previous carry

            if(t1 != null){ sum += t1.val; }               // add value from first list
            if(t2 != null){ sum += t2.val; }               // add value from second list

            ListNode newNode = new ListNode(sum % 10);     // create node of last digit of sum
            carry = sum / 10;                              // update carry for next iteration

            curr.next = newNode;                           // attach new node to result
            curr = curr.next;                              // move current pointer

            if(t1 != null){ t1 = t1.next; }                // move pointer in list1
            if(t2 != null){ t2 = t2.next; }                // move pointer in list2
        }

        if(carry > 0){                                     // if carry remains, add final node
            ListNode newNode = new ListNode(carry);
            curr.next = newNode;
        }

        return dummy.next;                                 // return head of the result list
    }
}

/*
Time Complexity (TC):  O(max(n, m)) 
â€” We traverse both lists once.

Space Complexity (SC): O(max(n, m)) 
â€” Output list stores the sum.
*/


