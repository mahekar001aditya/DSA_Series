class Solution {
    public boolean isRectangleOverlap(int[] rec1, int[] rec2) {
        if(rec1[0] >= rec2[2] || rec2[0] >= rec1[2] || rec1[1] >= rec2[3] || rec2[1] >= rec1[3])
            return false;
        return true;
    }
}



/*
================================================================================
                                RECTANGLE INDEXING
================================================================================

                   top (3)
                    ┌──────────────────────┐
                    │                      │
                    │        rec1          │
 left (0)           │      [0,1,2,3]       │     right (2)
                    └──────────────────────┘
                   bottom (1)



================================================================================
                      CASE 1 — rec2 ON THE RIGHT OF rec1
                      Condition: rec2[0] ≥ rec1[2]
================================================================================

                    top
        ┌──────────────────────┐ ┌──────────────────────┐
        │         rec1         │ │         rec2         │
 left   │       [0,1,2,3]      │ │       [2,1,4,3]      │   far right
 (0)    └──────────────────────┘ └──────────────────────┘
                    bottom



================================================================================
                      CASE 2 — rec2 ON THE LEFT OF rec1
                      Condition: rec1[0] ≥ rec2[2]
================================================================================

                top
 ┌──────────────────────┐ ┌──────────────────────┐
 │         rec2         │ │         rec1         │
 │      [-2,1,0,3]      │ │       [0,1,2,3]      │
 └──────────────────────┘ └──────────────────────┘
                bottom



================================================================================
                       CASE 3 — rec2 ABOVE rec1
                       Condition: rec2[1] ≥ rec1[3]
================================================================================

                     top
                     ┌──────────────────────┐
                     │        rec2          │
                     │      [0,3,2,5]       │
                     └──────────────────────┘
                     ┌──────────────────────┐
                     │        rec1          │
                     │      [0,1,2,3]       │
                     └──────────────────────┘
                     bottom



================================================================================
                       CASE 4 — rec2 BELOW rec1
                       Condition: rec1[1] ≥ rec2[3]
================================================================================

                     ┌──────────────────────┐
                     │        rec1          │
                     │      [0,1,2,3]       │
                     └──────────────────────┘
                     ┌──────────────────────┐
                     │        rec2          │
                     │     [0,-1,2,1]       │
                     └──────────────────────┘


================================================================================
                          END OF SINGLE-PAGE DIAGRAM
================================================================================
*/
