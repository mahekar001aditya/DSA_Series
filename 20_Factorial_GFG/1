class Solution {
    public static int fact(int n) {

        if( n == 0)            // n = 0 => 1
            return 1;

        return n * fact(n-1);
    }
}


/////////////////////////////////////////////////////////////////////////////////////////////

fact(5)
  |___, 5 * fact(4)
              |___, 4 * fact(3)
                          |___, 3 * fact(2)
                                       |____, 2 * fact(1)
                                                      |____, 1 * fact(0)   <==>  1 * 1

  /////////////////////////////////////////////////////////////////////////////////////////////
